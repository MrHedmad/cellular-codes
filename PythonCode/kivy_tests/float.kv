<Button>:
    font_size: 40
    color: 0.3, 0.6, 0.7, 1
    size_hint: 0.3, 0.50

<FloatLayout>:
    Button:
        pos_hint: {"x": 0.5, "top": 1}
        text: "This is a"
    Button:
        id: btn
        text: "button." if btn.state == "normal" else "button! Wow!"
        background_color: 0.3, 0.4, 0.5, 1
